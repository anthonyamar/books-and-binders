<% components_path = "wishlist_items/field_components/" %>
<div class="container my-5">
  <h1>Add a wish in "<%= @wishlist.title %>"</h1><br>
  <%= simple_form_for @wishlist_item, url: wishlist_items_path(@wishlist), method: :post, 
    defaults: { label: false, input_html: { class: "form-control shadow-sm"} }, 
    input_html: { class: "form-group" } do |f| 
  %>
    <div class="accordion shadow-sm" id="accordionExample">
      <%= render components_path + "form", f: f %>
    </div>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit "Add a wish", class: "btn btn-success btn-lg w-100 mt-3" %>
  <% end %>
</div>