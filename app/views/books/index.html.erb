<div class="container mt-5">
  <h1>My library</h1> 
  <div class="table-responsive mt-5">
    <table id="book-index" class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Actions</th>
          <th scope="col">Title</th>
          <th scope="col">Author</th>
          <th scope="col">Category</th>
          <th scope="col">Obsidian ID</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <th onclick="navigator.clipboard.writeText(<%= "%%id:#{book.id}%%" %>);" scope="row">
            <%= book.id %>
          </th>
          <th>
            <%= link_to book_path(book) do %>
              <i class="fas fa-info-circle text-success"></i>
            <% end %>
            <%= link_to edit_book_path(book) do %>
              <i class="fas fa-edit text-primary"></i>
            <% end %>
            <%= link_to book_path(book), method: :delete do %>
              <i class="fas fa-trash text-danger"></i>
            <% end %>
            <%= link_to book_download_md_note_path(book), target: "_blank" do %>
              <i class="fas fa-download text-primary"></i>
            <% end %>
          </th>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.category %></td>
          <td>
            <div class="d-flex">
              <button onclick="copy(<%= book.id %>);">
                <i class="fas fa-copy"></i>
              </button>
              <input id="raw-markdown-<%= book.id %>" type="text" value="<%= "%%id:#{book.id}%%" %>" disabled>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="container">
    <div class="row">
      <div class="col-sm-6 my-5">
        <h3 class="mb-5">Category repartition</h3>
        <%= bar_chart @facade.category_repartition.sort_by { |k, v| v }.reverse, height: "1000px" %>
      </div>
      <div class="col-sm-6 my-5">
        <h3 class="mb-5">Language repartition</h3>
        <%= pie_chart @facade.language_repartition %>
      </div>
      <div class="col-sm-6 my-5">
        <h3 class="mb-5">Book type repartition</h3>
        <%= pie_chart @facade.book_type_repartition %>
      </div>
      <div class="col-sm-6 my-5">
        <h3 class="mb-5">Binding repartition</h3>
        <%= pie_chart @facade.binding_repartition %>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready( function () {
    $('#book-index').DataTable();
  });
  
  function copy(id) {
    var copyText = document.getElementById("raw-markdown-" + id);
    copyText.select();
    copyText.setSelectionRange(0, 99999);
    navigator.clipboard.writeText(copyText.value);
  } 
</script>