<div class="accordion-item">
  <h2 class="accordion-header" id="headingTwo">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
      <b>Acquisition infos</b>
    </button>
  </h2>
  <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
    <div class="accordion-body">
      <div class="form-group">
        <label>Release date</label>
        <div class="d-xl-flex justify-content-between">
          <%= f.date_select :buyed_at, { start_year: Date.today.year - 5, end_year: Date.today.year, order: [:day, :month, :year], with_css_classes: { month: "mx-lg-4 my-2 my-lg-0" } }, { class: "form-control custom-select" } %>
        </div><br>
      </div>

      <label>Buyed at/from</label>
      <%= f.input :buyed_from %><br>

      <label>Price</label>
      <%= f.input :price %><br>
    </div>
  </div>
</div>