<div class="accordion-item">
  <h2 class="accordion-header" id="headingTwo">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
      <b>Personal states</b>
    </button>
  </h2>
  <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
    <div class="accordion-body">
      <label>Read?</label>
      <%= f.input :read, as: :select, collection: [true, false], include_blank: false %><br>
      
      <div class="form-group">
        <label>Reading started </label>
        <div class="d-xl-flex justify-content-between">
          <%= f.date_select :started_at, { start_year: Date.today.year - 5, end_year: Date.today.year, order: [:day, :month, :year], with_css_classes: { month: "mx-lg-4 my-2 my-lg-0" }, include_blank: true }, { class: "form-control custom-select" } %>
        </div><br>
      </div>
      
      <div class="form-group">
        <label>Reading finished</label>
        <div class="d-xl-flex justify-content-between">
          <%= f.date_select :finished_at, { start_year: Date.today.year - 5, end_year: Date.today.year, order: [:day, :month, :year], with_css_classes: { month: "mx-lg-4 my-2 my-lg-0" }, include_blank: true }, { class: "form-control custom-select" } %>
        </div><br>
      </div>

      <label>Reviewed?</label>
      <%= f.input :reviewed, as: :select, collection: [true, false], include_blank: false %><br>
      
      <label>Note / 5</label>
      <%= f.input :note, as: :select, collection: (0..5).to_a %><br>
    </div>
  </div>
</div>